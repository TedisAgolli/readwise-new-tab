    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2019",
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "src/custom.d.ts"]
}
